@model _9_MyAcademy_MVC_CodeFirst.Models.HomeViewModel
@{
    ViewBag.Title = "LifeSure - Life Insurance";
    Layout = "~/Views/Shared/_LayoutFrontend.cshtml";
}

<!-- Carousel Start -->
@if (Model.Sliders != null && Model.Sliders.Any())
{
    <div class="header-carousel owl-carousel">
        @foreach (var slider in Model.Sliders)
        {
            <div class="header-carousel-item bg-primary">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row g-4 align-items-center">
                            <div class="col-lg-6 animated fadeInLeft">
                                <div class="text-sm-center text-md-start">
                                    <h4 class="text-white text-uppercase fw-bold mb-4">@slider.Subtitle</h4>
                                    <h1 class="display-1 text-white mb-4">@slider.Title</h1>
                                    <p class="mb-5 fs-5">@slider.Description</p>
                                    <div class="d-flex justify-content-center justify-content-md-start flex-shrink-0 mb-4">
                                        @if (!string.IsNullOrEmpty(slider.ButtonText))
                                        {
                                            <a class="btn btn-light rounded-pill py-3 px-4 px-md-5 me-2" href="@(slider.ButtonUrl ?? "#")">
                                                <i class="fas fa-play-circle me-2"></i>@slider.ButtonText
                                            </a>
                                        }
                                        <a class="btn btn-dark rounded-pill py-3 px-4 px-md-5 ms-2" href="#">Learn More</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 animated fadeInRight">
                                <div class="carousel-img" style="object-fit: cover;">
                                    <img src="@(slider.ImageUrl ?? "~/UITheme/LifeSure-1.0.0/img/carousel-2.png")" class="img-fluid w-100" alt="@slider.Title">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
<!-- Carousel End -->

<!-- Feature Start -->
@if (Model.Features != null && Model.Features.Any())
{
    <div class="container-fluid feature bg-light py-5">
        <div class="container py-5">
            <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
                <h4 class="text-primary">Our Features</h4>
                <h1 class="display-4 mb-4">Insurance Provides You a Better Future</h1>
                <p class="mb-0">We offer comprehensive insurance solutions tailored to your needs.</p>
            </div>
            <div class="row g-4">
                @foreach (var feature in Model.Features)
                {
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="feature-item p-4 pt-0">
                            <div class="feature-icon p-4 mb-4">
                                <i class="@feature.Icon"></i>
                            </div>
                            <h4 class="mb-4">@feature.Title</h4>
                            <p class="mb-4">@feature.Description</p>
                            <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Learn More</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<!-- Feature End -->

<!-- About Start -->
@if (Model.About != null)
{
    <div class="container-fluid bg-light about pb-5">
        <div class="container pb-5">
            <div class="row g-5">
                <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                    <div class="about-item-content bg-white rounded p-5 h-100">
                        <h4 class="text-primary">@Model.About.Subtitle</h4>
                        <h1 class="display-4 mb-4">@Model.About.Title</h1>
                        <p>@Model.About.Description</p>
                        <a class="btn btn-primary rounded-pill py-3 px-5" href="#">More Information</a>
                    </div>
                </div>
                <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.2s">
                    <div class="bg-white rounded p-5 h-100">
                        <div class="row g-4 justify-content-center">
                            <div class="col-12">
                                <div class="rounded bg-light">
                                    <img src="@(Model.About.ImageUrl ?? "~/UITheme/LifeSure-1.0.0/img/about-1.png")" class="img-fluid rounded w-100" alt="About">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="counter-item bg-light rounded p-3 h-100">
                                    <div class="counter-counting">
                                        <span class="text-primary fs-2 fw-bold" data-toggle="counter-up">@Model.About.InsurancePolicies</span>
                                        <span class="h1 fw-bold text-primary">+</span>
                                    </div>
                                    <h4 class="mb-0 text-dark">Insurance Policies</h4>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="counter-item bg-light rounded p-3 h-100">
                                    <div class="counter-counting">
                                        <span class="text-primary fs-2 fw-bold" data-toggle="counter-up">@Model.About.AwardsWon</span>
                                        <span class="h1 fw-bold text-primary">+</span>
                                    </div>
                                    <h4 class="mb-0 text-dark">Awards Won</h4>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="counter-item bg-light rounded p-3 h-100">
                                    <div class="counter-counting">
                                        <span class="text-primary fs-2 fw-bold" data-toggle="counter-up">@Model.About.SkilledAgents</span>
                                        <span class="h1 fw-bold text-primary">+</span>
                                    </div>
                                    <h4 class="mb-0 text-dark">Skilled Agents</h4>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="counter-item bg-light rounded p-3 h-100">
                                    <div class="counter-counting">
                                        <span class="text-primary fs-2 fw-bold" data-toggle="counter-up">@Model.About.TeamMembers</span>
                                        <span class="h1 fw-bold text-primary">+</span>
                                    </div>
                                    <h4 class="mb-0 text-dark">Team Members</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- About End -->

<!-- Service Start -->
@if (Model.Services != null && Model.Services.Any())
{
    <div class="container-fluid service py-5">
        <div class="container py-5">
            <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
                <h4 class="text-primary">Our Services</h4>
                <h1 class="display-4 mb-4">We Provide Best Services</h1>
                <p class="mb-0">Explore our comprehensive insurance plans tailored to your needs.</p>
            </div>
            <div class="row g-4 justify-content-center">
                @foreach (var service in Model.Services)
                {
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="service-item">
                            <div class="service-img">
                                <img src="@(service.ImageUrl ?? "~/UITheme/LifeSure-1.0.0/img/blog-1.png")" class="img-fluid rounded-top w-100" alt="@service.Name">
                                <div class="service-icon p-3">
                                    <i class="fa fa-shield-alt fa-2x"></i>
                                </div>
                            </div>
                            <div class="service-content p-4">
                                <div class="service-content-inner">
                                    <a href="#" class="d-inline-block h4 mb-4">@service.Name</a>
                                    <p class="mb-4">@service.Description</p>
                                    <p class="text-primary fw-bold fs-5">$@service.Price</p>
                                    <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<!-- Service End -->

<!-- FAQs Start -->
@if (Model.FAQs != null && Model.FAQs.Any())
{
    <div class="container-fluid faq-section bg-light py-5">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                    <div class="h-100">
                        <div class="mb-5">
                            <h4 class="text-primary">Some Important FAQ's</h4>
                            <h1 class="display-4 mb-0">Common Frequently Asked Questions</h1>
                        </div>
                        <div class="accordion" id="accordionExample">
                            @for (int i = 0; i < Model.FAQs.Count; i++)
                            {
                                var faq = Model.FAQs[i];
                                var collapseId = "collapse" + i;
                                var headingId = "heading" + i;
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="@headingId">
                                        <button class="accordion-button @(i == 0 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(i == 0 ? "true" : "false")" aria-controls="@collapseId">
                                            @faq.Question
                                        </button>
                                    </h2>
                                    <div id="@collapseId" class="accordion-collapse collapse @(i == 0 ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#accordionExample">
                                        <div class="accordion-body rounded">
                                            @faq.Answer
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.4s">
                    <img src="~/UITheme/LifeSure-1.0.0/img/carousel-2.png" class="img-fluid w-100" alt="FAQ">
                </div>
            </div>
        </div>
    </div>
}
<!-- FAQs End -->

<!-- Blog Start -->
@if (Model.Blogs != null && Model.Blogs.Any())
{
    <div class="container-fluid blog py-5">
        <div class="container py-5">
            <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
                <h4 class="text-primary">From Blog</h4>
                <h1 class="display-4 mb-4">News And Updates</h1>
                <p class="mb-0">Stay updated with our latest news and insights.</p>
            </div>
            <div class="row g-4 justify-content-center">
                @foreach (var blog in Model.Blogs)
                {
                    <div class="col-lg-6 col-xl-4 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="blog-item">
                            <div class="blog-img">
                                <img src="@(blog.ImageUrl ?? "~/UITheme/LifeSure-1.0.0/img/blog-1.png")" class="img-fluid rounded-top w-100" alt="@blog.Title">
                                <div class="blog-categiry py-2 px-4">
                                    <span>@blog.CategoryName</span>
                                </div>
                            </div>
                            <div class="blog-content p-4">
                                <div class="blog-comment d-flex justify-content-between mb-3">
                                    <div class="small"><span class="fa fa-user text-primary"></span> @blog.Author</div>
                                    <div class="small"><span class="fa fa-calendar text-primary"></span> @blog.PublishDate.ToString("MMM dd, yyyy")</div>
                                    <div class="small"><span class="fa fa-comment-alt text-primary"></span> @blog.CommentCount Comments</div>
                                </div>
                                <a href="#" class="h4 d-inline-block mb-3">@blog.Title</a>
                                <p class="mb-3">@blog.Description</p>
                                <a href="#" class="btn p-0">Read More <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<!-- Blog End -->

<!-- Team Start -->
@if (Model.TeamMembers != null && Model.TeamMembers.Any())
{
    <div class="container-fluid team pb-5">
        <div class="container pb-5">
            <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
                <h4 class="text-primary">Our Team</h4>
                <h1 class="display-4 mb-4">Meet Our Expert Team Members</h1>
                <p class="mb-0">Our dedicated professionals are here to serve you.</p>
            </div>
            <div class="row g-4">
                @foreach (var member in Model.TeamMembers)
                {
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="team-item">
                            <div class="team-img">
                                <img src="@(member.ImageUrl ?? "~/UITheme/LifeSure-1.0.0/img/team-1.jpg")" class="img-fluid rounded-top w-100" alt="@member.Name">
                                <div class="team-icon">
                                    @if (!string.IsNullOrEmpty(member.FacebookUrl))
                                    {
                                        <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href="@member.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                                    }
                                    @if (!string.IsNullOrEmpty(member.TwitterUrl))
                                    {
                                        <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href="@member.TwitterUrl"><i class="fab fa-twitter"></i></a>
                                    }
                                    @if (!string.IsNullOrEmpty(member.LinkedInUrl))
                                    {
                                        <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href="@member.LinkedInUrl"><i class="fab fa-linkedin-in"></i></a>
                                    }
                                    @if (!string.IsNullOrEmpty(member.InstagramUrl))
                                    {
                                        <a class="btn btn-primary btn-sm-square rounded-pill mb-0" href="@member.InstagramUrl"><i class="fab fa-instagram"></i></a>
                                    }
                                </div>
                            </div>
                            <div class="team-title p-4">
                                <h4 class="mb-0">@member.Name</h4>
                                <p class="mb-0">@member.Position</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<!-- Team End -->

<!-- Testimonial Start -->
@if (Model.Testimonials != null && Model.Testimonials.Any())
{
    <div class="container-fluid testimonial pb-5">
        <div class="container pb-5">
            <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
                <h4 class="text-primary">Testimonial</h4>
                <h1 class="display-4 mb-4">What Our Customers Are Saying</h1>
                <p class="mb-0">Read what our satisfied clients have to say about us.</p>
            </div>
            <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.2s">
                @foreach (var testimonial in Model.Testimonials)
                {
                    <div class="testimonial-item bg-light rounded">
                        <div class="row g-0">
                            <div class="col-4 col-lg-4 col-xl-3">
                                <div class="h-100">
                                    <img src="@(testimonial.ImageUrl ?? "~/UITheme/LifeSure-1.0.0/img/testimonial-1.jpg")" class="img-fluid h-100 rounded" style="object-fit: cover;" alt="@testimonial.ClientName">
                                </div>
                            </div>
                            <div class="col-8 col-lg-8 col-xl-9">
                                <div class="d-flex flex-column my-auto text-start p-4">
                                    <h4 class="text-dark mb-0">@testimonial.ClientName</h4>
                                    <p class="mb-3">@testimonial.Position</p>
                                    <div class="d-flex text-primary mb-3">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= testimonial.Rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-star text-body"></i>
                                            }
                                        }
                                    </div>
                                    <p class="mb-0">@testimonial.Comment</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<!-- Testimonial End -->

<!-- AI Insurance Advisor Start -->
<div class="container-fluid bg-light py-5" id="ai-advisor">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">AI Insurance Advisor</h4>
            <h1 class="display-4 mb-4">Personalized Insurance Recommendations</h1>
            <p class="mb-0">Get AI-powered insurance advice tailored to your needs</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        @using (Html.BeginForm("GetAIAdvice", "Home", FormMethod.Post, new { @class = "needs-validation" }))
                        {
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Your Age</label>
                                    <input type="number" name="age" class="form-control form-control-lg" placeholder="Example: 30" required min="18" max="100" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Your Occupation</label>
                                    <input type="text" name="job" class="form-control form-control-lg" placeholder="Example: Engineer" required />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Monthly Income (TL)</label>
                                    <input type="number" name="income" class="form-control form-control-lg" placeholder="Example: 15000" required />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Family Status</label>
                                    <select name="family" class="form-select form-select-lg" required>
                                        <option value="">Select</option>
                                        <option value="Single">Single</option>
                                        <option value="Married">Married</option>
                                        <option value="Married with Children">Married with Children</option>
                                    </select>
                                </div>

                                <div class="col-12 text-center mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 py-3">
                                        <i class="fas fa-robot me-2"></i>Get AI Recommendations
                                    </button>
                                </div>
                            </div>
                        }

                        @if (TempData["AIAdvice"] != null)
                        {
                            <div class="alert alert-success mt-4 p-4" role="alert">
                                <h5 class="alert-heading mb-3">
                                    <i class="fas fa-check-circle me-2"></i>AI Insurance Recommendations
                                </h5>
                                <hr />
                                <div style="white-space: pre-wrap; line-height: 1.8;">@TempData["AIAdvice"]</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- AI Insurance Advisor End -->

@section scripts {
    @if (TempData["AIAdvice"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                var aiSection = document.getElementById('ai-advisor');
                if (aiSection) {
                    aiSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        </script>
    }
}