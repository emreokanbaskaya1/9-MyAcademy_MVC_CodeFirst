@model _9_MyAcademy_MVC_CodeFirst.Models.ContactViewModel
@{
    ViewBag.Title = "Contact Us - LifeSure";
    Layout = "~/Views/Shared/_LayoutFrontend.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Contact Us</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item active text-primary">Contact</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<!-- Contact Start -->
<div class="container-fluid contact bg-light py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Contact Us</h4>
            <h1 class="display-4 mb-4">If you have any comments please apply now</h1>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row g-5">
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="contact-img d-flex justify-content-center">
                    <div class="contact-img-inner">
                        <img src="~/UITheme/LifeSure-1.0.0/img/contact-img.png" class="img-fluid w-100" alt="Contact">
                    </div>
                </div>
            </div>
            <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.4s">
                <div>
                    <h4 class="text-primary">Send Your Message</h4>
                    <p class="mb-4">We'd love to hear from you. Please fill out the form below and we'll get back to you as soon as possible.</p>
                    
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "contact-form" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.Message.Name, new { @class = "form-control border-0", placeholder = "Your Name", required = "required" })
                                    <label for="Message_Name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.Message.Email, new { @class = "form-control border-0", type = "email", placeholder = "Your Email", required = "required" })
                                    <label for="Message_Email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.Message.Phone, new { @class = "form-control border-0", type = "tel", placeholder = "Phone", required = "required" })
                                    <label for="Message_Phone">Your Phone</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <select name="Message.InsuranceType" id="Message_InsuranceType" class="form-select border-0" required>
                                        <option value="">Select Insurance Type</option>
                                        <option value="Life Insurance">Life Insurance</option>
                                        <option value="Health Insurance">Health Insurance</option>
                                        <option value="Auto Insurance">Auto Insurance</option>
                                        <option value="Home Insurance">Home Insurance</option>
                                        <option value="Travel Insurance">Travel Insurance</option>
                                        <option value="Business Insurance">Business Insurance</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label for="Message_InsuranceType">Insurance Type</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.Message.Subject, new { @class = "form-control border-0", placeholder = "Subject", required = "required" })
                                    <label for="Message_Subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    @Html.TextAreaFor(m => m.Message.Message, new { @class = "form-control border-0", placeholder = "Leave a message here", style = "height: 120px", required = "required" })
                                    <label for="Message_Message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100 py-3">Send Message</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @if (Model.ContactInfo != null)
            {
                <div class="col-12">
                    <div>
                        <div class="row g-4">
                            <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.2s">
                                <div class="contact-add-item">
                                    <div class="contact-icon text-primary mb-4">
                                        <i class="fas fa-map-marker-alt fa-2x"></i>
                                    </div>
                                    <div>
                                        <h4>Address</h4>
                                        <p class="mb-0">@Model.ContactInfo.Address</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.4s">
                                <div class="contact-add-item">
                                    <div class="contact-icon text-primary mb-4">
                                        <i class="fas fa-envelope fa-2x"></i>
                                    </div>
                                    <div>
                                        <h4>Mail Us</h4>
                                        <p class="mb-0">@Model.ContactInfo.Email</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.6s">
                                <div class="contact-add-item">
                                    <div class="contact-icon text-primary mb-4">
                                        <i class="fa fa-phone-alt fa-2x"></i>
                                    </div>
                                    <div>
                                        <h4>Telephone</h4>
                                        <p class="mb-0">@Model.ContactInfo.Phone</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.8s">
                                <div class="contact-add-item">
                                    <div class="contact-icon text-primary mb-4">
                                        <i class="fab fa-firefox-browser fa-2x"></i>
                                    </div>
                                    <div>
                                        <h4>Follow Us</h4>
                                        <div class="d-flex gap-2">
                                            @if (!string.IsNullOrEmpty(Model.ContactInfo.FacebookUrl))
                                            {
                                                <a href="@Model.ContactInfo.FacebookUrl" class="btn btn-primary btn-sm-square rounded-circle"><i class="fab fa-facebook-f"></i></a>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.ContactInfo.TwitterUrl))
                                            {
                                                <a href="@Model.ContactInfo.TwitterUrl" class="btn btn-primary btn-sm-square rounded-circle"><i class="fab fa-twitter"></i></a>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.ContactInfo.InstagramUrl))
                                            {
                                                <a href="@Model.ContactInfo.InstagramUrl" class="btn btn-primary btn-sm-square rounded-circle"><i class="fab fa-instagram"></i></a>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.ContactInfo.LinkedInUrl))
                                            {
                                                <a href="@Model.ContactInfo.LinkedInUrl" class="btn btn-primary btn-sm-square rounded-circle"><i class="fab fa-linkedin-in"></i></a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-12 wow fadeInUp" data-wow-delay="0.2s">
                <div class="rounded">
                    <iframe class="rounded w-100" style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387191.33750346623!2d-73.97968099999999!3d40.6974881!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2sbd!4v1694259649153!5m2!1sen!2sbd" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->