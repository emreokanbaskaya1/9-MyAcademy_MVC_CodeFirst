@model IEnumerable<_9_MyAcademy_MVC_CodeFirst.Data.Entities.TeamMember>

@{
    ViewBag.Title = "Team Members Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="bg-emerald-50 dark:bg-emerald-900/20 border-l-4 border-emerald-500 p-4 mb-6 rounded-lg">
        <div class="flex items-center gap-2 text-emerald-800 dark:text-emerald-300">
            <span class="material-icons-outlined">check_circle</span>
            <p class="font-medium">@TempData["Success"]</p>
        </div>
    </div>
}

<div class="flex justify-between items-center mb-6">
    <p class="text-sm text-gray-500 dark:text-gray-400">Manage team members</p>
    <a href="@Url.Action("Create")" class="bg-primary hover:bg-primary-hover text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg shadow-primary/20 flex items-center gap-2">
        <span class="material-icons-outlined text-lg">add</span>Add Team Member
    </a>
</div>

@if (Model.Any())
{
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-surface-border">
            <thead class="bg-gray-50 dark:bg-surface-border/30">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Name</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Position</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Social Links</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Status</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-surface-border">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-primary/5">
                        <td class="px-6 py-4"><span class="text-sm font-semibold text-gray-900 dark:text-white">@item.Name</span></td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-300">@item.Position</td>
                        <td class="px-6 py-4">
                            @if (!string.IsNullOrEmpty(item.FacebookUrl)) { <i class="fab fa-facebook text-blue-600 mr-2"></i> }
                            @if (!string.IsNullOrEmpty(item.TwitterUrl)) { <i class="fab fa-twitter text-blue-400 mr-2"></i> }
                            @if (!string.IsNullOrEmpty(item.LinkedInUrl)) { <i class="fab fa-linkedin text-blue-700 mr-2"></i> }
                        </td>
                        <td class="px-6 py-4">
                            @if (item.IsActive)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">
                                    <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 mr-1.5"></span>Active
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="text-amber-600 mr-3"><span class="material-icons-outlined text-lg">edit</span></a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" onclick="return confirm('Delete?')" class="text-rose-600"><span class="material-icons-outlined text-lg">delete</span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>No team members found. Click "Add New Member" to add one.
    </div>
}
