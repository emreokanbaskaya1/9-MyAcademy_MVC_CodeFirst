@model _9_MyAcademy_MVC_CodeFirst.Data.Entities.FAQ

@{
    ViewBag.Title = "Add FAQ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-3xl">
    <div class="mb-6">
        <a href="@Url.Action("Index")" class="inline-flex items-center text-sm text-gray-500 dark:text-gray-400 hover:text-primary">
            <span class="material-icons-outlined text-lg mr-1">arrow_back</span>
            Back to FAQs
        </a>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border overflow-hidden">
        <div class="p-6">
            @using (Html.BeginForm("Create", "FAQ", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="space-y-6">
                    <div>
                        @Html.LabelFor(model => model.Question, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                        @Html.TextBoxFor(model => model.Question, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", placeholder = "What is your question?" })
                        @Html.ValidationMessageFor(model => model.Question, "", new { @class = "mt-1 text-sm text-rose-600 dark:text-rose-400" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.Answer, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                        @Html.TextAreaFor(model => model.Answer, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", rows = 5, placeholder = "Provide a detailed answer..." })
                        @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "mt-1 text-sm text-rose-600 dark:text-rose-400" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.OrderNumber, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                        @Html.TextBoxFor(model => model.OrderNumber, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", type = "number", Value = "1", min = "1" })
                        @Html.ValidationMessageFor(model => model.OrderNumber, "", new { @class = "mt-1 text-sm text-rose-600 dark:text-rose-400" })
                        <p class="mt-1.5 text-xs text-gray-500 dark:text-gray-400">Lower numbers appear first in the list</p>
                    </div>
                </div>

                <div class="mt-8 flex items-center justify-between pt-6 border-t border-gray-200 dark:border-surface-border">
                    <a href="@Url.Action("Index")" class="px-6 py-2.5 border border-gray-300 dark:border-surface-border text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-surface-border transition-colors">
                        Cancel
                    </a>
                    <button type="submit" class="px-6 py-2.5 bg-primary hover:bg-primary-hover text-white rounded-lg font-medium shadow-lg shadow-primary/20 transition-colors inline-flex items-center gap-2">
                        <span class="material-icons-outlined text-lg">save</span>
                        Add FAQ
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
