@model _9_MyAcademy_MVC_CodeFirst.Data.Entities.ContactMessage
@{
    ViewBag.Title = "Message Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="mb-4">
    <a href="@Url.Action("Index")" class="text-gray-600 dark:text-gray-400 hover:text-primary inline-flex items-center gap-2">
        <span class="material-icons-outlined">arrow_back</span>
        Back to Messages
    </a>
</div>

<div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
    <div class="flex items-start justify-between mb-6 pb-6 border-b border-gray-200 dark:border-surface-border">
        <div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">@Model.Subject</h2>
            <div class="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
                <span class="flex items-center gap-1">
                    <span class="material-icons-outlined text-sm">schedule</span>
                    @Model.CreatedDate.ToString("dd MMM yyyy HH:mm")
                </span>
                @if (Model.IsRead)
                {
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">
                        <span class="material-icons-outlined text-xs mr-1">done_all</span>Read
                    </span>
                }
                else
                {
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                        <span class="material-icons-outlined text-xs mr-1">mark_email_unread</span>New
                    </span>
                }
            </div>
        </div>
    </div>

    <div class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Name</label>
                <p class="text-base font-semibold text-gray-900 dark:text-white">@Model.Name</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Email</label>
                <p class="text-base text-gray-900 dark:text-white">
                    <a href="mailto:@Model.Email" class="text-primary hover:underline">@Model.Email</a>
                </p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Phone</label>
                <p class="text-base text-gray-900 dark:text-white">
                    <a href="tel:@Model.Phone" class="text-primary hover:underline">@Model.Phone</a>
                </p>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Project))
            {
                <div>
                    <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Project</label>
                    <p class="text-base text-gray-900 dark:text-white">@Model.Project</p>
                </div>
            }
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Message</label>
            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-4 border border-gray-200 dark:border-gray-700">
                <p class="text-base text-gray-900 dark:text-white whitespace-pre-wrap">@Model.Message</p>
            </div>
        </div>

        <div class="flex items-center gap-3 pt-4">
            <a href="mailto:@Model.Email" class="bg-primary hover:bg-primary-hover text-white px-6 py-3 rounded-lg font-medium shadow-lg shadow-primary/20 flex items-center gap-2">
                <span class="material-icons-outlined">reply</span>
                Reply via Email
            </a>
            <a href="@Url.Action("Delete", new { id = Model.Id })" onclick="return confirm('Delete this message?')" class="bg-rose-600 hover:bg-rose-700 text-white px-6 py-3 rounded-lg font-medium flex items-center gap-2">
                <span class="material-icons-outlined">delete</span>
                Delete
            </a>
        </div>
    </div>
</div>
