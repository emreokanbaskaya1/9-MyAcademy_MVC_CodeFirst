<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewBag.Title - LifeSure Admin</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "primary-hover": "#0e6ac9",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                        "surface-dark": "#18232e",
                        "surface-border": "#253444",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                },
            },
        }
    </script>
    <style>
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: #101922; }
        ::-webkit-scrollbar-thumb { background: #253444; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #374151; }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-200 font-display antialiased h-screen flex overflow-hidden">
    
    <!-- Sidebar -->
    <aside class="w-64 bg-white dark:bg-surface-dark border-r border-gray-200 dark:border-surface-border flex flex-col flex-shrink-0 z-20">
        <!-- Logo -->
        <div class="h-16 flex items-center px-6 border-b border-gray-200 dark:border-surface-border">
            <div class="flex items-center gap-2 text-primary font-bold text-xl">
                <span class="material-icons-outlined text-2xl">shield</span>
                <span>LifeSure Admin</span>
            </div>
        </div>
        
        <!-- Navigation -->
        <div class="flex-1 overflow-y-auto py-6 px-3 space-y-1">
            <p class="px-3 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">Main Menu</p>
            
            <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                <span class="material-icons-outlined text-xl">dashboard</span>
                Dashboard
            </a>
            
            <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "PolicySale", new { area = "Admin" })">
                <span class="material-icons-outlined text-xl">receipt_long</span>
                Policy Sales
            </a>
            
            <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Category", new { area = "Admin" })">
                <span class="material-icons-outlined text-xl">category</span>
                Categories
            </a>
            
            <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Product", new { area = "Admin" })">
                <span class="material-icons-outlined text-xl">inventory</span>
                Products
            </a>
            
            <div class="pt-4 pb-2">
                <p class="px-3 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">Content</p>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Feature", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">star</span>
                    Features
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Slider", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">view_carousel</span>
                    Sliders
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Blog", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">article</span>
                    Blog
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "TeamMember", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">people</span>
                    Team
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Testimonial", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">rate_review</span>
                    Testimonials
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "FAQ", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">help</span>
                    FAQs
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "About", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">info</span>
                    About
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Contact", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">contact_mail</span>
                    Contact Info
                </a>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "ContactMessage", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">mail</span>
                    Messages
                </a>
            </div>
            
            <div class="pt-4 pb-2">
                <p class="px-3 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">AI Tools</p>
                
                <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/10 hover:text-primary transition-colors" href="@Url.Action("Index", "Search", new { area = "Admin" })">
                    <span class="material-icons-outlined text-xl">travel_explore</span>
                    Tavily AI Search
                </a>
            </div>
        </div>
        
        <!-- User Profile -->
        <div class="p-4 border-t border-gray-200 dark:border-surface-border">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-full bg-gradient-to-br from-purple-500 to-indigo-500 flex items-center justify-center text-xs text-white font-bold">
                    @{
                        var fullName = Session["AdminFullName"] as string ?? "Admin";
                        var initials = fullName.Length >= 2 ? fullName.Substring(0, 2).ToUpper() : fullName.ToUpper();
                    }
                    @initials
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-white truncate">@fullName</p>
                    <p class="text-xs text-gray-500 dark:text-gray-400 truncate">Administrator</p>
                </div>
                <a href="@Url.Action("Logout", "Auth", new { area = "Admin" })" class="text-gray-400 hover:text-rose-400 transition-colors" title="Logout">
                    <span class="material-icons-outlined">logout</span>
                </a>
            </div>
        </div>
    </aside>
    
    <!-- Main Content -->
    <main class="flex-1 flex flex-col relative overflow-hidden">
        <!-- Header -->
        <header class="h-16 flex items-center justify-between px-6 bg-white dark:bg-surface-dark border-b border-gray-200 dark:border-surface-border z-10">
            <h1 class="text-xl font-semibold text-gray-900 dark:text-white">@ViewBag.Title</h1>
            <div class="flex items-center gap-3">
                <button class="p-2 text-gray-400 hover:text-primary transition-colors">
                    <span class="material-icons-outlined">notifications</span>
                </button>
            </div>
        </header>
        
        <!-- Page Content -->
        <div class="flex-1 overflow-auto p-6">
            @RenderBody()
        </div>
    </main>

    @RenderSection("scripts", required: false)
</body>
</html>
