@model _9_MyAcademy_MVC_CodeFirst.Data.Entities.PolicySale
@{
    ViewBag.Title = "Policy Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="mb-6 flex items-center justify-between">
    <a href="@Url.Action("Index")" class="inline-flex items-center gap-2 text-gray-500 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors">
        <span class="material-icons-outlined text-lg">arrow_back</span>
        <span>Back to Policy Sales</span>
    </a>
    <div class="flex items-center gap-2">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="px-4 py-2 rounded-lg bg-amber-500 hover:bg-amber-600 text-white font-medium flex items-center gap-2 transition-colors">
            <span class="material-icons-outlined text-lg">edit</span>
            Edit
        </a>
        <button onclick="window.print()" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 dark:bg-surface-border dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium flex items-center gap-2 transition-colors">
            <span class="material-icons-outlined text-lg">print</span>
            Print
        </button>
    </div>
</div>

<!-- Policy Header Card -->
<div class="bg-gradient-to-r from-primary to-blue-600 rounded-xl p-6 mb-6 text-white">
    <div class="flex items-start justify-between">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <div class="h-16 w-16 rounded-full bg-white/20 flex items-center justify-center text-2xl font-bold">
                    @Model.FirstName[0]@Model.LastName[0]
                </div>
                <div>
                    <h1 class="text-3xl font-bold">@Model.FullName</h1>
                    <p class="text-blue-100 mt-1">Policy Number: <span class="font-semibold text-white">@Model.PolicyNumber</span></p>
                </div>
            </div>
        </div>
        <div class="text-right">
            <div class="text-4xl font-bold">@Model.SaleAmount.ToString("C")</div>
            <div class="mt-2 flex items-center justify-end gap-2">
                @switch (Model.PolicyStatus)
                {
                    case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PolicyStatus.Active:
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-emerald-500 text-white">
                            <span class="w-2 h-2 rounded-full bg-white mr-2"></span>Active
                        </span>
                        break;
                    case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PolicyStatus.Expired:
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-500 text-white">
                            <span class="w-2 h-2 rounded-full bg-white mr-2"></span>Expired
                        </span>
                        break;
                    case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PolicyStatus.Cancelled:
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-rose-500 text-white">
                            <span class="w-2 h-2 rounded-full bg-white mr-2"></span>Cancelled
                        </span>
                        break;
                    case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PolicyStatus.Suspended:
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-500 text-white">
                            <span class="w-2 h-2 rounded-full bg-white mr-2"></span>Suspended
                        </span>
                        break;
                }
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Customer Information -->
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-icons-outlined text-primary">person</span>
            Customer Information
        </h3>
        <div class="space-y-4">
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Full Name</label>
                <p class="text-gray-900 dark:text-white font-medium">@Model.FullName</p>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Email Address</label>
                <p class="text-gray-900 dark:text-white font-medium">
                    <a href="mailto:@Model.Email" class="text-primary hover:underline">@Model.Email</a>
                </p>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Phone Number</label>
                <p class="text-gray-900 dark:text-white font-medium">
                    <a href="tel:@Model.PhoneNumber" class="text-primary hover:underline">@Model.PhoneNumber</a>
                </p>
            </div>
            @if (!string.IsNullOrEmpty(Model.TCIdentityNumber))
            {
                <div>
                    <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">TC Identity Number</label>
                    <p class="text-gray-900 dark:text-white font-medium">@Model.TCIdentityNumber</p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Address))
            {
                <div>
                    <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Address</label>
                    <p class="text-gray-900 dark:text-white font-medium">@Model.Address</p>
                </div>
            }
        </div>
    </div>

    <!-- Policy Information -->
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-icons-outlined text-primary">description</span>
            Policy Information
        </h3>
        <div class="space-y-4">
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Policy Type</label>
                <p class="text-gray-900 dark:text-white font-medium">@(Model.Product?.Name ?? "N/A")</p>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Category</label>
                <p class="text-gray-900 dark:text-white font-medium">@(Model.Product?.Category?.Name ?? "N/A")</p>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Policy Period</label>
                <div class="flex items-center gap-2">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                        @Model.PolicyStartDate.ToString("dd/MM/yyyy")
                    </span>
                    <span class="text-gray-400">?</span>
                    <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                        @Model.PolicyEndDate.ToString("dd/MM/yyyy")
                    </span>
                </div>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Duration</label>
                <p class="text-gray-900 dark:text-white font-medium">
                    @{
                        var duration = Model.PolicyEndDate - Model.PolicyStartDate;
                        @($"{duration.Days} days ({Math.Round(duration.TotalDays / 30)} months)")
                    }
                </p>
            </div>
        </div>
    </div>

    <!-- Payment Information -->
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-icons-outlined text-primary">payments</span>
            Payment Information
        </h3>
        <div class="space-y-4">
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Sale Amount</label>
                <p class="text-2xl font-bold text-emerald-600 dark:text-emerald-400">@Model.SaleAmount.ToString("C")</p>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Payment Status</label>
                <div class="mt-1">
                    @switch (Model.PaymentStatus)
                    {
                        case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PaymentStatus.Paid:
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">
                                <span class="w-2 h-2 rounded-full bg-emerald-500 mr-2"></span>Paid
                            </span>
                            break;
                        case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PaymentStatus.Pending:
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-300">
                                <span class="w-2 h-2 rounded-full bg-amber-500 mr-2"></span>Pending
                            </span>
                            break;
                        case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PaymentStatus.PartiallyPaid:
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                                <span class="w-2 h-2 rounded-full bg-blue-500 mr-2"></span>Partially Paid
                            </span>
                            break;
                        case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PaymentStatus.Refunded:
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300">
                                <span class="w-2 h-2 rounded-full bg-purple-500 mr-2"></span>Refunded
                            </span>
                            break;
                        case _9_MyAcademy_MVC_CodeFirst.Data.Entities.PaymentStatus.Cancelled:
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-rose-100 text-rose-800 dark:bg-rose-900/30 dark:text-rose-300">
                                <span class="w-2 h-2 rounded-full bg-rose-500 mr-2"></span>Cancelled
                            </span>
                            break;
                    }
                </div>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Created By</label>
                <p class="text-gray-900 dark:text-white font-medium">@(Model.CreatedBy ?? "System")</p>
            </div>
            <div>
                <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Created Date</label>
                <p class="text-gray-900 dark:text-white font-medium">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
            @if (Model.UpdatedDate.HasValue)
            {
                <div>
                    <label class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Last Updated</label>
                    <p class="text-gray-900 dark:text-white font-medium">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Notes Section -->
@if (!string.IsNullOrEmpty(Model.Notes))
{
    <div class="mt-6 bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-icons-outlined text-primary">notes</span>
            Notes
        </h3>
        <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap">@Model.Notes</p>
    </div>
}

<!-- Print Styles -->
<style>
    @@media print {
        .no-print { display: none !important; }
        body { background: white !important; }
        .bg-gradient-to-r { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
    }
</style>
