@{
    ViewBag.Title = "Web Search";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var searchResult = ViewBag.SearchResult as _9_MyAcademy_MVC_CodeFirst.Services.TavilySearchResult;
}

@if (TempData["Error"] != null)
{
    <div class="bg-rose-50 dark:bg-rose-900/20 border-l-4 border-rose-500 p-4 mb-6 rounded-lg">
        <div class="flex items-center gap-2 text-rose-800 dark:text-rose-300">
            <span class="material-icons-outlined">error</span>
            <p class="font-medium">@TempData["Error"]</p>
        </div>
    </div>
}

<div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Tavily AI Web Search</h2>
    <p class="text-sm text-gray-500 dark:text-gray-400">Search the web with AI-powered results</p>
</div>

<div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6 mb-6">
    @using (Html.BeginForm("Search", "Search", FormMethod.Post, new { @class = "space-y-4" }))
    {
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search Query</label>
            <div class="flex gap-3">
                <input type="text" 
                       name="query" 
                       value="@ViewBag.Query" 
                       class="flex-1 px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent" 
                       placeholder="2026 poliçe satýþ fiyatlarý, insurance trends 2025..." 
                       required />
                <button type="submit" 
                        class="bg-primary hover:bg-primary-hover text-white px-6 py-3 rounded-lg font-medium shadow-lg shadow-primary/20 flex items-center gap-2 transition-colors">
                    <span class="material-icons-outlined">search</span>
                    Search
                </button>
            </div>
            <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                <span class="material-icons-outlined text-xs">info</span>
                Try: "Turkey home insurance prices 2026" or "latest car insurance rates"
            </p>
        </div>
    }
</div>

@if (searchResult != null)
{
    if (searchResult.Success)
    {
        <div class="space-y-6">
            <!-- AI Answer Section -->
            @if (!string.IsNullOrEmpty(searchResult.Answer))
            {
                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl shadow-sm border border-blue-200 dark:border-blue-800 p-6">
                    <div class="flex items-start gap-3 mb-3">
                        <span class="material-icons-outlined text-blue-600 dark:text-blue-400 text-2xl">smart_toy</span>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">AI Summary</h3>
                    </div>
                    <p class="text-gray-700 dark:text-gray-300 leading-relaxed">@searchResult.Answer</p>
                </div>
            }

            <!-- Search Results -->
            @if (searchResult.Results != null && searchResult.Results.Any())
            {
                <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
                    <div class="flex items-center gap-2 mb-6">
                        <span class="material-icons-outlined text-primary">article</span>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Top Results (@searchResult.Results.Count found)</h3>
                    </div>

                    <div class="space-y-4">
                        @foreach (var result in searchResult.Results)
                        {
                            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow">
                                <div class="flex items-start justify-between gap-4 mb-2">
                                    <a href="@result.Url" target="_blank" class="flex-1 group">
                                        <h4 class="text-base font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">
                                            @result.Title
                                        </h4>
                                    </a>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">
                                        @((int)(result.Score * 100))% relevance
                                    </span>
                                </div>
                                
                                <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 leading-relaxed">
                                    @result.Content
                                </p>
                                
                                <div class="flex items-center gap-2">
                                    <span class="material-icons-outlined text-xs text-gray-400">link</span>
                                    <a href="@result.Url" target="_blank" class="text-xs text-primary hover:underline truncate">
                                        @result.Url
                                    </a>
                                    <a href="@result.Url" target="_blank" class="ml-auto inline-flex items-center gap-1 text-xs text-primary hover:text-primary-hover">
                                        Visit Source
                                        <span class="material-icons-outlined text-xs">open_in_new</span>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="bg-amber-50 dark:bg-amber-900/20 border-l-4 border-amber-500 p-4 rounded-lg">
                    <div class="flex items-center gap-2 text-amber-800 dark:text-amber-300">
                        <span class="material-icons-outlined">warning</span>
                        <p class="font-medium">No specific results found, but AI provided a summary above.</p>
                    </div>
                </div>
            }

            <!-- Metadata -->
            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-4 border border-gray-200 dark:border-gray-700">
                <div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
                    <div class="flex items-center gap-1">
                        <span class="material-icons-outlined text-sm">schedule</span>
                        <span>Searched: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</span>
                    </div>
                    <div class="flex items-center gap-1">
                        <span class="material-icons-outlined text-sm">search</span>
                        <span>Query: "@ViewBag.Query"</span>
                    </div>
                    <div class="flex items-center gap-1">
                        <span class="material-icons-outlined text-sm">verified</span>
                        <span>Powered by Tavily AI</span>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-rose-50 dark:bg-rose-900/20 border-l-4 border-rose-500 p-6 rounded-lg">
            <div class="flex items-start gap-3">
                <span class="material-icons-outlined text-rose-600 dark:text-rose-400 text-2xl">error</span>
                <div>
                    <h3 class="text-lg font-semibold text-rose-800 dark:text-rose-300 mb-2">Search Failed</h3>
                    <p class="text-rose-700 dark:text-rose-400">@searchResult.ErrorMessage</p>
                    <p class="text-sm text-rose-600 dark:text-rose-500 mt-2">Please check your Tavily API key in Web.config and try again.</p>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="bg-white dark:bg-surface-dark rounded-xl p-12 text-center border border-gray-200 dark:border-surface-border">
        <span class="material-icons-outlined text-6xl text-gray-300 dark:text-gray-600 mb-4">travel_explore</span>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No search performed yet</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-4">Enter a query above to search the web with AI</p>
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-sm text-blue-700 dark:text-blue-300">
            <span class="material-icons-outlined text-sm">lightbulb</span>
            <span>Perfect for finding current insurance prices, market trends, and real-time data</span>
        </div>
    </div>
}
