@model _9_MyAcademy_MVC_CodeFirst.Data.Entities.Blog
@{
    ViewBag.Title = "Create Blog Post";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-4xl">
    <div class="mb-6">
        <a href="@Url.Action("Index")" class="inline-flex items-center text-sm text-gray-500 dark:text-gray-400 hover:text-primary">
            <span class="material-icons-outlined text-lg mr-1">arrow_back</span>
            Back to Blog Posts
        </a>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border overflow-hidden">
        <div class="p-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="md:col-span-2">
                            @Html.LabelFor(m => m.Title, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                            @Html.TextBoxFor(m => m.Title, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", placeholder = "Blog post title" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "mt-1 text-sm text-rose-600 dark:text-rose-400" })
                        </div>
                        <div>
                            @Html.LabelFor(m => m.Author, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                            @Html.TextBoxFor(m => m.Author, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", placeholder = "Author name" })
                            @Html.ValidationMessageFor(m => m.Author, "", new { @class = "mt-1 text-sm text-rose-600 dark:text-rose-400" })
                        </div>
                    </div>

                    <div>
                        @Html.LabelFor(m => m.Description, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", rows = 2, placeholder = "Brief description (appears in listings)" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "mt-1 text-sm text-rose-600 dark:text-rose-400" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.Content, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                        @Html.TextAreaFor(m => m.Content, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", rows = 8, placeholder = "Full blog content..." })
                        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "mt-1 text-sm text-rose-600 dark:text-rose-400" })
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            @Html.LabelFor(m => m.ImageUrl, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                            @Html.TextBoxFor(m => m.ImageUrl, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", placeholder = "~/UITheme/..." })
                        </div>
                        <div>
                            @Html.LabelFor(m => m.CategoryName, new { @class = "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" })
                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "block w-full px-4 py-2.5 border border-gray-300 dark:border-surface-border rounded-lg bg-white dark:bg-background-dark text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-primary", placeholder = "Business, Technology, etc." })
                        </div>
                    </div>
                </div>

                <div class="mt-8 flex items-center justify-between pt-6 border-t border-gray-200 dark:border-surface-border">
                    <a href="@Url.Action("Index")" class="px-6 py-2.5 border border-gray-300 dark:border-surface-border text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-surface-border transition-colors">
                        Cancel
                    </a>
                    <button type="submit" class="px-6 py-2.5 bg-primary hover:bg-primary-hover text-white rounded-lg font-medium shadow-lg shadow-primary/20 transition-colors inline-flex items-center gap-2">
                        <span class="material-icons-outlined text-lg">save</span>
                        Create Post
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }
