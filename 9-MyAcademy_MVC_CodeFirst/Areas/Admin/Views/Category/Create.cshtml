@model _9_MyAcademy_MVC_CodeFirst.Data.Entities.Category
@{
    ViewBag.Title = "Create Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-2xl">
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Create New Category</h2>
        
        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "space-y-6" }))
        {
            @Html.AntiForgeryToken()
            
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Category Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent", placeholder = "Enter category name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-rose-600 text-sm mt-1" })
            </div>
            
            <div class="flex items-center gap-3">
                <button type="submit" class="bg-primary hover:bg-primary-hover text-white px-6 py-3 rounded-lg font-medium shadow-lg shadow-primary/20 flex items-center gap-2">
                    <span class="material-icons-outlined">save</span>
                    Create Category
                </button>
                <a href="@Url.Action("Index")" class="bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-white px-6 py-3 rounded-lg font-medium">
                    Cancel
                </a>
            </div>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
