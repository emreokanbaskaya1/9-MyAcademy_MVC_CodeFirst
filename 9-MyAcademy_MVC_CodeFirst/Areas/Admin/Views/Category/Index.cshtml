@model IEnumerable<_9_MyAcademy_MVC_CodeFirst.Data.Entities.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="bg-emerald-50 dark:bg-emerald-900/20 border-l-4 border-emerald-500 p-4 mb-6 rounded-lg">
        <div class="flex items-center gap-2 text-emerald-800 dark:text-emerald-300">
            <span class="material-icons-outlined">check_circle</span>
            <p class="font-medium">@TempData["Success"]</p>
        </div>
    </div>
}

<div class="flex justify-between items-center mb-6">
    <p class="text-sm text-gray-500 dark:text-gray-400">Manage product categories</p>
    <a href="@Url.Action("Create")" class="bg-primary hover:bg-primary-hover text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg shadow-primary/20 flex items-center gap-2">
        <span class="material-icons-outlined text-lg">add</span>Create New
    </a>
</div>

@if (Model.Any())
{
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-surface-border">
            <thead class="bg-gray-50 dark:bg-surface-border/30">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">ID</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Category Name</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-surface-border">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-primary/5 transition-colors">
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                                #@item.Id
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-sm font-semibold text-gray-900 dark:text-white">@item.Name</span>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="text-amber-600 hover:text-amber-700 dark:text-amber-400">
                                    <span class="material-icons-outlined text-lg">edit</span>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" onclick="return confirm('Delete this category?')" class="text-rose-600 hover:text-rose-700 dark:text-rose-400">
                                    <span class="material-icons-outlined text-lg">delete</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="bg-white dark:bg-surface-dark rounded-xl p-12 text-center border border-gray-200 dark:border-surface-border">
        <span class="material-icons-outlined text-6xl text-gray-300 dark:text-gray-600 mb-4">category</span>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No categories found</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-4">Create your first category</p>
        <a href="@Url.Action("Create")" class="inline-flex items-center gap-2 bg-primary hover:bg-primary-hover text-white px-6 py-2 rounded-lg">
            <span class="material-icons-outlined">add</span>Create Category
        </a>
    </div>
}
