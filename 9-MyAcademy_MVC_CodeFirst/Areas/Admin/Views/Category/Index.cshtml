@model List<_9_MyAcademy_MVC_CodeFirst.Data.Entities.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int count = 0;
}

<h2>Categories</h2>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Actions</th>
    </tr>

    @foreach(var item in Model)
     {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@item.Id" class="btn btn-outline-danger">Delete</a>
                <a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-outline-info">Update</a>
            </td>
        </tr>
     }
    
</table>

<a href="/Admin/Category/CreateCategory" class="btn btn-outline-dark">Create</a>
