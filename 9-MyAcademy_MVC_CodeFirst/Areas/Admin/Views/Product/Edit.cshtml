@model _9_MyAcademy_MVC_CodeFirst.Data.Entities.Product
@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-3xl">
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-200 dark:border-surface-border p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Edit Product</h2>
        
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "space-y-6" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Product ID</label>
                    <input type="text" value="@Model.Id" disabled class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Status</label>
                    @Html.DropDownListFor(m => m.IsActive, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Active", Value = "true" },
                        new SelectListItem { Text = "Inactive", Value = "false" }
                    }, new { @class = "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent" })
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Product Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent", placeholder = "Enter product name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-rose-600 text-sm mt-1" })
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price ($)</label>
                    @Html.TextBoxFor(m => m.Price, new { @class = "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent", placeholder = "0.00", type = "number", step = "0.01" })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-rose-600 text-sm mt-1" })
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
                @Html.TextAreaFor(m => m.Description, new { @class = "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent", rows = "4", placeholder = "Enter product description" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-rose-600 text-sm mt-1" })
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Image URL</label>
                @Html.TextBoxFor(m => m.ImageUrl, new { @class = "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent", placeholder = "https://example.com/image.jpg" })
                @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-rose-600 text-sm mt-1" })
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Category</label>
                @Html.DropDownListFor(m => m.CategoryId, (List<SelectListItem>)ViewBag.categories, "-- Select Category --", new { @class = "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent" })
                @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-rose-600 text-sm mt-1" })
            </div>
            
            <div class="flex items-center gap-3">
                <button type="submit" class="bg-primary hover:bg-primary-hover text-white px-6 py-3 rounded-lg font-medium shadow-lg shadow-primary/20 flex items-center gap-2">
                    <span class="material-icons-outlined">save</span>
                    Update Product
                </button>
                <a href="@Url.Action("Index")" class="bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-white px-6 py-3 rounded-lg font-medium">
                    Cancel
                </a>
            </div>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
